# MySQL Database
MYSQL_ROOT_PASSWORD=change_this_root_password_in_production
MYSQL_DATABASE=gradius_db
MYSQL_USER=gradius
MYSQL_PASSWORD=change_this_password_in_production

# Backend API
JWT_SECRET=change_this_to_a_random_32_character_string_minimum
API_PORT=5000
NODE_ENV=production
LOG_LEVEL=info

# FreeRADIUS
RADIUS_SECRET=change_this_radius_shared_secret

# WireGuard Configuration
# IMPORTANT: Set this to your server's public IP or domain
WG_SERVER_ENDPOINT=your.server.ip:51820
WG_SERVER_PUBLIC_KEY=generate_with_wg_genkey_command
WG_NETWORK=192.168.55.0/24

# Network IPs
# WireGuard VPN Network (192.168.55.0/24)
# VPN clients will receive IPs from this range
WG_SERVER_IP=192.168.55.1

# Docker Internal Network (10.0.0.0/24)
# Network IPs (do not change unless you know what you're doing)
WG_SERVER_IP=10.0.0.1
NGINX_IP=10.0.0.2
BACKEND_IP=10.0.0.3
MYSQL_IP=10.0.0.4
RADIUS_IP=10.0.0.5

# Google OAuth (optional - configure via admin panel)
GOOGLE_AUTH_ENABLED=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://10.0.0.3:5000/api/auth/google/callback

# Security Settings
# WARNING: Change all default passwords before deploying to production!
# Generate strong secrets using: openssl rand -base64 32
